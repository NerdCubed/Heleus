{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Compose: Launch and Debug",
            "type": "python",
            "preLaunchTask": "Compose Up",
            "postDebugTask": "Compose Down",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": false,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}